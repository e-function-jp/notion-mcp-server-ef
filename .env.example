# Notion MCP Server Configuration

# Required: Your Notion Integration Token
NOTION_TOKEN=your_notion_integration_token

# Required: The root page ID that the bot has access to
NOTION_PAGE_ID=your_notion_page_id

# Transport Mode Configuration
# Options: "stdio" (default) or "http"
MCP_TRANSPORT_MODE=stdio

# HTTP Mode Configuration (only used when MCP_TRANSPORT_MODE=http)
MCP_HTTP_PORT=3000
MCP_HTTP_STATEFUL=false
MCP_HTTP_JSON_RESPONSE=true

# Markdown Feature Configuration
# Default output format for read operations: true = Markdown, false = JSON (default)
NOTION_MCP_MARKDOWN_DEFAULT_FOR_READ=false

# Maximum characters for Markdown output (default: 12000)
NOTION_MCP_MARKDOWN_MAX_CHARS=12000
